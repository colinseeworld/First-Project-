<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jsone3_categoryfood">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JSONE3_CategoryFood"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.MainActivity"></activity>
        <activity android:name=".activities.OrderHistoryActivity" />
        <activity android:name=".activities.EditAddressActivity" />
        <activity android:name=".activities.DisplayAddressActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.CategoryActivity" />
        <activity android:name=".activities.EmptyCartActivity" />
        <activity android:name=".activities.CartActivity" />
        <activity android:name=".activities.CoverActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SubCategoryActivity" />
        <activity android:name=".activities.ProductDetailActivity" />
        <activity android:name=".activities.OrderSubmitStatusActivity" />
        <activity android:name=".activities.OrderSubmitActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>