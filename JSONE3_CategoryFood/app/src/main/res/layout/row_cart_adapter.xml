<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/select_pro_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_marginStart="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_pro_name"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:ellipsize="end"
                    android:textColor="@color/ashNavy"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="5"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"/>

                <ImageButton
                    android:id="@+id/select_pro_delete"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_clear_24"
                    android:background="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_pro_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:minLines="1"
                    android:textSize="18sp"
                    android:maxLines="21"/>

                <TextView
                    android:id="@+id/select_pro_new_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:minLines="1"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:maxLines="21"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/btnMinus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_indeterminate_check_box_24"/>

                <TextView
                    android:id="@+id/select_pro_quantity"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="35dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textSize="26sp" />

                <ImageView
                    android:id="@+id/btnPlus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_add_box_24"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>